<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim16dp"
    android:layout_marginStart="@dimen/dim16dp"
    android:layout_marginEnd="@dimen/dim16dp"
    android:layout_weight="1"
     >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.89">
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dim16sp"
        android:textColor="@android:color/black"
        android:text="my Nfsdfdsgdsgsdsdgdgsdggdgame"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dim12sp"
        android:textColor="@color/dark_gray"
        android:text="myEmail"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="0.11"
        android:orientation="horizontal"
        android:gravity="center_vertical|end">
    <ImageView
        android:layout_width="@dimen/dim28dp"
        android:layout_height="@dimen/dim28dp"
        android:src="@drawable/ic_left"/>
    </LinearLayout>
</LinearLayout>